extends layout
block content 

    .show
        h1 #{post.title}
        p.meta Posted in 
          a(href="/categories/show/#{post.category}") #{post.category} by #{post.author} on #{moment(post.date).format("DD-MM-YYYY")}
        img(src="/images/uploads/#{post.mainimage}", alt="")

        !=post.body